{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "VisuGPS",
  "version": "0.1.0",
  "identifier": "com.visugps.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "visugps",
        "minWidth": 1024,
        "maximized": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
    
  },
  
  "plugins": {
    "process": {
      "allowlist": [
        "relaunch"
      ]
    },
    "fs": {
      "scope": [
        "$APPDATA/com.visugps.app/VisuGPS/**"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  }
}